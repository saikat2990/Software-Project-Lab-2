@model ClothBazar.Entities.DispensaryVeiwModel

@{
    ViewBag.Title = "Appointment";
   
   
}


@*<link re="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>*@

<h2>Service Table</h2>

<div class="row">

    <div class="col-md-8">
        <form method="post">
            <label>Search</label>
            <input id="searchtxt" style="width:90%; height:40px; " name="Search" />

        </form>
    </div>

    <div class="col-md-4">
        <button id="search" type="button">Search</button>
        <button id="reset" type="button">Reset</button>
        <button id="newbtn">New</button>
    </div>

</div>

<div>
    <table class="table" id="DispensaryTable">

        <thead class="thead-dark">
            <tr>
                <td class="font-weight-bold">Id</td>
                <td class="font-weight-bold">Name</td>
                <td class="font-weight-bold">Email</td>
                <td class="font-weight-bold">Serial Number</td>
                <td class="font-weight-bold">Doctor Name</td>
                <td class="font-weight-bold">Date</td>
                <td class="font-weight-bold">DrugService</td>
                <td class="font-weight-bold">TotalCost</td>
                <td class=" font-weight-bold wrap-td">Actions</td>
            </tr>

        </thead>
        <tbody>
            @if (Model.DispensaryServices != null && Model.DispensaryServices.Count()>0)
            {
                foreach (var product in Model.DispensaryServices)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Email</td>
                        <td>@product.SerialNum</td>
                        <td>@product.DoctorName</td>
                        <td>@product.Date</td>
                        <td>@product.DrugService</td>
                        <td>@product.TotalCost</td>
                        <td>
                            <button style="padding:2px;margin:2px;" class="Edit" data-id="@product.Id">Edit</button>
                            <button style="padding:2px;margin:2px;" class="Delete" data-id="@product.Id">Delete</button>
                          
                        </td>

                    </tr>

                }
            }
            else
            {
                <tr>
                    <td class="text-danger" colspan="6">No data found</td>
                </tr>
            }

        </tbody>
    </table>



    <div>
        @if (Model.PageNo != 1)
        {
            <button class="pageMove" data-pageNo="@(Model.PageNo-1)">PreviousPage</button>
        }
        <button class="pageMove" data-pageNo="@(Model.PageNo+1)">NextPage</button>
    </div>

</div>
<script>


        //$('#ProductTable').DataTable();

        $(".pageMove").click(function () {

            $.ajax({
                url: '/Dispensary/Appoinment',
                data: {
                    pageNo: $(this).attr("data-pageNo")
                }
            })
            .done(function (response) {
                //alert(response);
                $("#tableContainer").html(response);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Fail");
            });
        });

    $("#search").click(function () {

        var value = $("#searchtxt").val();


        $.ajax({
            url: '/Dispensary/Appoinment',
            data: {
                search: value
            }
        })
        .done(function (response) {
            //alert(response);
            $("#tableContainer").html(response);
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });

    $("#reset").click(function () {

        $.ajax({
            url: '/Dispensary/Appoinment',
        })
            .done(function (response) {
                //alert(response);
                $("#tableContainer").html(response);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Fail");
            });
    });

    $("#newbtn").click(function () {

        $.ajax({
            url: '/Dispensary/Create',
        })
        .done(function (response) {
            alert(response);
            $("#actionContainer").html(response);
            focusAction("actionContainer");
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });

    $(".Edit").click(function () {

        $.ajax({
            url: '/Dispensary/Edit',
            data: {
                Id: $(this).attr("data-id")
            }
        })
        .done(function (response) {
            //alert(response);
            $("#actionContainer").html(response);
            focusAction("actionContainer");
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });

    $(".Delete").click(function () {

        //var confirmDelete = confirm("Are you sure ,You want to delete the product");

        swal({
          title: "Are you sure?",
          text: "Once deleted, you will not be able to recover this imaginary file!",
          icon: "warning",
          buttons: true,
          dangerMode: true,
        })
        .then((willDelete) => {
           if (willDelete) {

               $.ajax({
                    type: "POST",
                   url: '/Dispensary/Delete',
                    data: {
                        Id: $(this).attr("data-id")
                    }
                })
                .done(function (response) {
                    alert(response);
                    $("#tableContainer").html(response);

                    swal("Poof! Your imaginary file has been deleted!", {
                      icon: "success",
                    });

                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Fail");
                });

            } else {
               swal("Your imaginary file is safe!");
            }


        });

    });

</script>

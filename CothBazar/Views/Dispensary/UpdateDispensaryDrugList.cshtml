@model ClothBazar.Entities.DispensaryDrugTableViewModel

<div>


    @using (Html.BeginForm("UpdateDispensaryDrugList", "Dispensary"))
    {


        for (var i = 0; i < Model.DispensaryDrugs.Count(); i++)
        {


            @Html.LabelFor(x => x.DispensaryDrugs[i].Name)<br />
            @Html.TextBoxFor(x => x.DispensaryDrugs[i].Name)<br />


            @Html.LabelFor(x => x.DispensaryDrugs[i].ServiceAmount)<br />
            @Html.TextBoxFor(x => x.DispensaryDrugs[i].ServiceAmount)<br />
        }
        <br />
        <input type="submit" value="Submit" id="sub" />
    }


</div>
